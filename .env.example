# MySQL 数据库配置（Docker 环境）
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=bitcoin_user
MYSQL_PASSWORD=bitcoin123
MYSQL_DATABASE=bitcoin_db
MYSQL_ROOT_PASSWORD=bitcoin123

# Flask 后端配置
FLASK_ENV=production
FLASK_DEBUG=0

# CoinGecko API 配置（可选）
# 如果有 CoinGecko Pro API Key，可以在这里配置
# COINGECKO_API_KEY=your_api_key_here

# 缓存配置
CACHE_TTL=1800  # 30分钟（秒）

# 数据保留策略
DATA_RETENTION_DAYS=365  # 保留最近一年的数据
